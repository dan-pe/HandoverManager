<Window x:Class="handovermgr.Controls.WifiNetworksView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:networkViews="clr-namespace:handovermgr.Controls.NetworkViews"
        mc:Ignorable="d"
        Title="WifiNetworksView" Height="400" Width="300"
        Background="Aquamarine">
    <Grid>
        <!--#region Grid Definitions-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--#endregion-->

        <!--#region Wireless Interface -->

        <networkViews:WifiView Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" />

        <!--#endregion-->
    </Grid>
</Window>