<Window x:Class="handovermgr.Controls.NetworkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:handovermgr.Controls"
        mc:Ignorable="d"
        Title="NetworkView" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <DockPanel>
                <Label HorizontalAlignment="Center" FontWeight="Bold">Active Interface</Label>
            </DockPanel>
            <DockPanel>
                <Label Width="150">Interface Name:</Label>
                <TextBox x:Name="InterfaceNameTextBox"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label Width="150">Interface Type:</Label>
                <TextBox x:Name="InterfaceTypeTextBox"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label Width="150">Interface Speed:</Label>
                <TextBox x:Name="InterfaceSpeedTextBox"></TextBox>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
