<Window x:Class="handovermgr.Controls.NetworkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:handovermgr.Controls"
        mc:Ignorable="d"
        Title="NetworkView" Height="300" Width="300"
        Background="SteelBlue">
    <Grid>
        <!--#region Grid Definitions -->
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!--#endregion-->

        <StackPanel Orientation="Vertical" Grid.ColumnSpan="2" Grid.Row="0">
            <DockPanel>
                <Label HorizontalAlignment="Center" FontWeight="Bold">Active Interface</Label>
            </DockPanel>
            <DockPanel>
                <Label Width="150">Name:</Label>
                <TextBox x:Name="InterfaceNameTextBox"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label Width="150">Type:</Label>
                <TextBox x:Name="InterfaceTypeTextBox"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label Width="150">Speed:</Label>
                <TextBox x:Name="InterfaceSpeedTextBox"></TextBox>
            </DockPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.ColumnSpan="2">
                <Label HorizontalAlignment="Center" FontWeight="Bold">
                    Network List for active interface
                </Label>
            <ListBox x:Name="NetworksViewList" 
                      ItemsSource="{Binding Path=ActiveNetworks}"/>
                <!--DisplayMemberPath="profileName">-->
                
                <!--<ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="Name: "/>
                            <TextBlock Text="{Binding profileName}"></TextBlock>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>-->
             
        </StackPanel>
    </Grid>
</Window>
